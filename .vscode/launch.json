{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "NestJS App",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start:debug"],
        "port": 9229,
        "stopOnEntry": false,
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "outFiles": [],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}/apps/api"
      }
    ]
  }